<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-md-auto form-body">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { data: { turbo: false} }) do |f| %>
        <h1 class="mb-5 fw-normal text-center">Please sign in</h1>
        <form>
          <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" }, class: "form-control" %>
          <%= f.input :password, required: false, input_html: { autocomplete: "current-password" }, class: "form-control" %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          <div class="d-grid">
            <%= f.button :submit, "Log in", class:"btn btn-lg btn-primary mt-3"  %>
          </div>
          <p class="mt-3 mb-3 text-muted text-center">&copy; <%= Time.now.year %></p>
        </form>
        <%= render "devise/shared/links" %>
      <% end %>
    </div>
  </div>
</div>
