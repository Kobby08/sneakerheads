<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-md-auto form-body">
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name),  html: { data: { turbo: false} }) do |f| %>
        <h1 class="mb-5 fw-normal text-center">Forgot your password?</h1>
        <%= f.error_notification %>
        <form>
          <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" }, class: "form-control" %>
          <div class="d-grid">
            <%= f.button :submit, "Send me reset password instructions", class:"btn btn-lg btn-primary mt-3"  %>
          </div>
          <p class="mt-3 mb-3 text-muted text-center">&copy; <%= Time.now.year %></p>
        </form>
        <%= render "devise/shared/links" %>
      <% end %>
    </div>
  </div>
</div>
